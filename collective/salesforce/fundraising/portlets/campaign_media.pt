<dl class="portlet portletCampaignMedia"
    i18n:domain="collective.salesforce.fundraising"
    tal:define="image view/context/image;
                show_media_portlet view/context/show_media_portlet;
                external_media view/context/get_external_media_oembed"
    tal:condition="python: (image or external_media_url) and show_media_portlet">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
           Campaign Media
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">

      <tal:if_external_media condition="external_media">
      <div class="oembed" tal:content="structure external_media"></div>
      </tal:if_external_media>

      <tal:if_image condition="python: not external_media and image.size">
      <img src="" tal:attributes="src python: view.context.absolute_url() + '/@@images/image/mini'" />
      </tal:if_image>

    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
<div class="visualClear"></div>
