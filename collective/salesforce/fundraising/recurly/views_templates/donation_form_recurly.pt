    <form method="post" action="" id="donation-form-recurring" class="donation-form donation-form-recurly">
      <fieldset class="fieldset-donation-amount">
        <legend>Select an Amount</legend>

        <div class="field field-donation-amount">


          <div class="field-amount">
            <label for="amount">or Enter an Amount</label>
            <label for="amount" class="currency">$</label>
            <input name="x_amount" type="number" size="5" class="validate[required,min[5]]" />
            <label for="amount">($5 minimum)</label>
          </div>

          <div class="options">

            <div class="option" tal:repeat="level view/levels">
              <input id="donation-level-recurring-xx" type="radio" name="donation-level" value="xx"
                tal:attributes="value level; id string:donation-level-recurring-${level}" />
              <label for="donation-level-recurring-xx" tal:attributes="for string:donation-level-recurring-${level}" tal:content="level">xx</label>
            </div>

            <div class="clear"></div>
          </div>

        </div>

      </fieldset>
    </form>

    <div id="recurly-subscribe" class="after-amount"></div>

    <script type="text/javascript" tal:content="structure view/recurly_js"></script>

