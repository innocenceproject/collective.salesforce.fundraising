        float left
        font-size round(base_font_size*0.8)
        line-height 24px
        vertical-align middle 
        width columns(2) - 1px

      .month
        float left
        field-width columns(3) + column_width
        margin-left 0

      .year
        float left
        margin-left 1px
        field-width columns(2)

 
    &.state
      field-width columns(5) 
      .error
        left columns(8)
  
    &.zip
      hstack(3) 

    &.vat_number
      field-width columns(4) 
      display none
      &.applicable
        display block

