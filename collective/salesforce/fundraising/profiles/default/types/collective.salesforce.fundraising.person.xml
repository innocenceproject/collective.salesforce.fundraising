<?xml version="1.0"?>
<object name="collective.salesforce.fundraising.person"
   meta_type="Dexterity FTI"
   i18n:domain="collective.salesforce.fundraising" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">Person</property>
  <property name="description"
    i18n:translate="">Person</property>
  <property name="content_icon">user.png</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types" />
  <property name="allow_discussion">False</property>

 <!-- schema interface FIXME: this is ugly -->
 <property name="schema">collective.salesforce.fundraising.person.IPerson</property>

 <!-- class used for content items -->
 <property name="klass">collective.salesforce.fundraising.person.Person</property>
<!--
  <property name="product">collective.salesforce.fundraising</property>
  <property name="factory">addMember</property>
-->
 <property name="add_permission">cmf.AddPortalContent</property>
 <property name="behaviors">
     <!-- Note: we do not enable IDublinCore as we want to define our
          own Title field based on first and last name.  So we
          explicitly enable the behaviors that IDublinCore represents,
          except the IBasic behavior. -->
     <!-- element value="plone.app.dexterity.behaviors.metadata.IDublinCore" /-->
     <!-- element value="plone.app.dexterity.behaviors.metadata.IBasic" /-->
     <!--<element value="plone.app.dexterity.behaviors.metadata.ICategorization" />-->
     <!--<element value="plone.app.dexterity.behaviors.metadata.IPublication" />-->
     <element value="plone.app.dexterity.behaviors.metadata.IOwnership" />
     <!--element value="plone.app.content.interfaces.INameFromTitle" /-->
     <element value="dexterity.membrane.behavior.membraneuser.INameFromFullName" />
     <element value="plone.app.referenceablebehavior.referenceable.IReferenceable" />
     <element value="dexterity.membrane.behavior.membraneuser.IMembraneUser" />
     <element value="dexterity.membrane.behavior.membraneuser.IProvidePasswords" />
     <element value="collective.salesforce.content.interfaces.ISalesforceObject"/>
  </property>

  <!-- View information -->
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="base_view" />
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="(selected layout)" />
  <alias from="edit" to="@@edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="@@view" />

  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
    <permission value="View" />
  </action>

  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content" />
  </action>
</object>
