<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.salesforce.fundraising">
<body>
<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <div class="donation-form-wrapper">
      <h2 class="page-section-header">Make a Donation</h2>
      <ul class="tabs">
        <li tal:repeat="tab view/donation_form_tabs">
          <span class="label-wrapper">
            <span class="selected-indicator"></span>
            <span class="label" tal:content="tab/label">
              One-time donation
            </span>
          </span>
        </li>
        <div class="visualClear"></div>
      </ul>
    
      <div class="panels"> 
        <div class="panel" tal:repeat="tab view/donation_form_tabs" tal:content="structure tab/html">
          FORM PANEL GOES HERE
        </div> 
      </div>
    </div>

    <div id="campaign-body" tal:content="structure context/body/output|nothing" />

  </metal:content-core>
</metal:main>
</body>
</html>

