<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.salesforce.fundraising">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <div class="campaign-body" tal:content="structure context/body/output|nothing" />

    <div class="donation-form-wrapper">
      <ul class="tabs">
        <li tal:repeat="tab view/donation_form_tabs" tal:content="tab/label">
          One-time donation
        </li>
      </ul>
    
      <div class="panels"> 
        <div class="panel" tal:repeat="tab view/donation_form_tabs" tal:content="structure tab/html">
          FORM PANEL GOES HERE
        </div> 
      </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

